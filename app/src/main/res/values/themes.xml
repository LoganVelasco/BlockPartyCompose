<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlockParty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/dark_charcoal</item>
        <item name="colorOnPrimary">@color/beu_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/charcoal</item>
        <item name="colorSecondaryVariant">@color/dark_charcoal</item>
        <item name="colorOnSecondary">@color/beu_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlockPartySplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="windowSplashScreenAnimationDuration">6000</item>
        <item name="postSplashScreenTheme">@style/Theme.BlockParty</item>

        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="Theme.BlockParty.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlockPartyCompose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlockPartyCompose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>